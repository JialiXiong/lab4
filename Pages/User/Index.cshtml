@page
@model Lab3_example.Pages_User.IndexModel
@{
    ViewData["Title"] = "Profile Settings";
}
<h1>User</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserInfo.UserId" class="form-control" />
            <div class="form-group">
                <label asp-for="UserInfo.Name" class="control-label"></label>
                <input asp-for="UserInfo.Name" class="form-control" />
                <span asp-validation-for="UserInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Email" class="control-label"></label>
                <input asp-for="UserInfo.Email" class="form-control" />
                <span asp-validation-for="UserInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Phone" class="control-label"></label>
                <input asp-for="UserInfo.Phone" class="form-control" />
                <span asp-validation-for="UserInfo.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.StreetNumber" class="control-label"></label>
                <input asp-for="UserInfo.StreetNumber" class="form-control" />
                <span asp-validation-for="UserInfo.StreetNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.StreetName" class="control-label"></label>
                <input asp-for="UserInfo.StreetName" class="form-control" />
                <span asp-validation-for="UserInfo.StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Postalcode" class="control-label"></label>
                <input asp-for="UserInfo.Postalcode" class="form-control" />
                <span asp-validation-for="UserInfo.Postalcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.City" class="control-label"></label>
                <input asp-for="UserInfo.City" class="form-control" />
                <span asp-validation-for="UserInfo.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Province" class="control-label"></label>
                <input asp-for="UserInfo.Province" class="form-control" />
                <span asp-validation-for="UserInfo.Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
